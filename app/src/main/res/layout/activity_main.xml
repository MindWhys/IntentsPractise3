<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.example.android.intentspractise.MainActivity">

    <!---->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/mybutton"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:onClick="createAlarm"
            android:text="@string/alarm"/>

        <Button
            android:id="@+id/photo"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/mybutton"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:onClick="takePhoto"
            android:text="@string/camera"/>

        <Button
            android:id="@+id/email"
            android:background="@drawable/mybutton"
            android:textColor="@color/textColor"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:onClick="sendEmail"
            android:text="@string/email"/>

        <Button
            android:id="@+id/taxi"
            android:background="@drawable/mybutton"
            android:textColor="@color/textColor"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:onClick="getTaxi"
            android:text="@string/taxi"/>

        <Button
            android:id="@+id/note"
            android:background="@drawable/mybutton"
            android:textColor="@color/textColor"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:onClick="newNote"
            android:text="@string/note"/>

        <Button
            android:id="@+id/phone"
            android:background="@drawable/mybutton"
            android:textColor="@color/textColor"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:text="@string/phone"/>

        <Button
            android:id="@+id/messaging"
            android:background="@drawable/mybutton"
            android:textColor="@color/textColor"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:onClick="sendMessage"
            android:text="@string/text"/>



    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical">

            <Button
                android:id="@+id/create_event"
                android:background="@drawable/mybutton"
                android:textColor="@color/textColor"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:onClick="createCalendar"
                android:text="@string/calendar"/>

            <Button
                android:id="@+id/get_contact"
                android:background="@drawable/mybutton"
                android:textColor="@color/textColor"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:onClick="getContact"
                android:text="@string/contacts"/>

            <Button
                android:id="@+id/fileStorage"
                android:background="@drawable/mybutton"
                android:textColor="@color/textColor"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:onClick="fileStorage"
                android:text="@string/file"/>

            <Button
                android:id="@+id/showMaps"
                android:background="@drawable/mybutton"
                android:textColor="@color/textColor"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:onClick="showMap"
                android:text="@string/map"/>

            <Button
                android:id="@+id/media"
                android:background="@drawable/mybutton"
                android:textColor="@color/textColor"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:onClick="playMedia"
                android:text="@string/media"/>

            <Button
                android:id="@+id/settings"
                android:background="@drawable/mybutton"
                android:textColor="@color/textColor"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:onClick="newSetting"
                android:text="@string/settings"/>

            <Button
                android:id="@+id/webBrowser"
                android:background="@drawable/mybutton"
                android:textColor="@color/textColor"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:onClick="webBrowser"
                android:text="@string/browser"/>

            <TextView

                android:id="@+id/contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <ImageView
                android:contentDescription="@string/imageDescription"
                android:id="@+id/photoFromStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:contentDescription="@string/imageDescription"
                android:id="@+id/mImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>