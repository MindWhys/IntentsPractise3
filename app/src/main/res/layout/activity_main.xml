<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.example.android.intentspractise.MainActivity">

    <!---->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="createAlarm"
            android:text="@string/alarm"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/photo"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="takePhoto"
            android:text="@string/camera"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/email"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="sendEmail"
            android:text="@string/email"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/taxi"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="getTaxi"
            android:text="@string/taxi"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/note"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="newNote"
            android:text="@string/note"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/phone"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:text="@string/phone"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/messaging"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="sendMessage"
            android:text="@string/text"
            android:textColor="@color/textColor" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">

        <Button
            android:id="@+id/create_event"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="createCalendar"
            android:text="@string/calendar"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/get_contact"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="getContact"
            android:text="@string/contacts"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/fileStorage"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="fileStorage"
            android:text="@string/file"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/showMaps"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="showMap"
            android:text="@string/map"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/media"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="playMedia"
            android:text="@string/media"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/settings"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="newSetting"
            android:text="@string/settings"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/webBrowser"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/mybutton"
            android:onClick="webBrowser"
            android:text="@string/browser"
            android:textColor="@color/textColor" />

        <TextView

            android:id="@+id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/photoFromStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageDescription" />

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageDescription" />

    </LinearLayout>

</LinearLayout>